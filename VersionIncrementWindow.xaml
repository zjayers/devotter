<Window x:Class="devotter.VersionIncrementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Version Increment" Height="230" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Select Version Increment" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>
        
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Current Version:" FontWeight="Bold"/>
            <TextBlock x:Name="TxtCurrentVersion" Text="1.0.0" Margin="0,5,0,0"/>
            <TextBlock Text="New Version:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock x:Name="TxtNewVersion" Text="1.0.0" Margin="0,5,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnMajor" Content="Major" Width="80" Margin="5" Padding="5" Click="BtnMajor_Click"/>
            <Button x:Name="BtnMinor" Content="Minor" Width="80" Margin="5" Padding="5" Click="BtnMinor_Click"/>
            <Button x:Name="BtnPatch" Content="Patch" Width="80" Margin="5" Padding="5" Click="BtnPatch_Click"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnCancel" Content="Cancel" Width="80" Margin="5,0" Padding="5" IsCancel="True"/>
            <Button x:Name="BtnOK" Content="OK" Width="80" Margin="5,0" Padding="5" IsDefault="True" Click="BtnOK_Click"/>
        </StackPanel>
    </Grid>
</Window>